generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique

  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}

model Author {
  id          String    @id @default(uuid())
  name        String
  surname     String
  biography   String?
  birth       DateTime?
  death       DateTime?
  nationality String?
  gender      String?
  books       Book[]
}

model Book {
  id          String @id @default(uuid())
  title       String
  authorId    String
  writtenBy   Author @relation(fields: [authorId], references: [id])
}
